{
  "name": "overmaster-launcher",
  "version": "1.0.0",
  "description": "Lanzador de minecraft",
  "author": "Valentinhere1",
  "main": "app.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.overmaster.launcher",
    "win": {
      "target": "nsis",
      "icon": "assets/images/icon.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "valentinhere1",
        "repo": "OverMaster"
      }
    ],
    "extraResources": [
      {
        "from": "./ffmpeg.dll",
        "to": "ffmpeg.dll"
      }
    ]
  },
  "files": [
    "app/**/*",
    "assets/**/*",
    "node_modules/**/*",
    "ffmpeg.dll"
  ],
  "devDependencies": {
    "electron": "^33.0.1",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "electron-updater": "^6.3.9"
  }
}
